{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "QuantForge Plugin Manifest",
  "required": [
    "name",
    "version",
    "api_version",
    "kind",
    "entry",
    "host_params",
    "strategy_params"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the plugin"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "The version of the plugin"
    },
    "api_version": {
      "type": "integer",
      "const": 1,
      "description": "The API version of the plugin"
    },
    "kind": {
      "type": "string",
      "enum": ["python", "native"],
      "description": "The kind of the plugin"
    },
    "entry": {
      "type": "string",
      "description": "The entry path to file of the plugin"
    },
    "author": {
      "type": "string",
      "description": "The author of the plugin"
    },
    "description": {
      "type": "string",
      "description": "The description of the plugin"
    },
    "host_params": {
      "type": "object",
      "description": "Simulation environment parameters controlled by the host",
      "additionalProperties": false,
      "required": [
        "backtest_start_datetime",
        "backtest_end_datetime",
        "initial_capital",
        "symbols",
        "monte_carlo_runs",
        "monte_carlo_seed"
      ],
      "properties": {
        "backtest_start_datetime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime for backtest start"
        },
        "backtest_end_datetime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime for backtest end"
        },
        "monte_carlo_runs": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Number of Monte Carlo simulation runs"
        },
        "monte_carlo_seed": {
          "type": ["integer", "null"],
          "default": null,
          "description": "Random seed for reproducibility"
        },
        "optimization_mode": {
          "type": "string",
          "enum": ["none", "grid_search", "bayesian", "genetic"],
          "default": "none",
          "description": "Optimization strategy used for refining strategy parameters during pruning."
        },
        "symbols": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["symbol", "timespan_unit", "timespan"],
            "properties": {
              "symbol": { "type": "string" },
              "timespan_unit": {
                "type": "string",
                "enum": ["second", "minute", "hour", "day", "week"]
              },
              "timespan": { "type": "integer", "minimum": 1 },
              "primary": { "type": "boolean", "default": true }
            }
          },
          "description": "The symbols used by the portfolio during this strategy execution"
        },
        "initial_capital": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$",
          "description": "The max-capital the user is starting with for the strategy, formatted as '150.00'"
        },
        "commission": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$",
          "default": "0",
          "description": "The amount of commision per trade that goes to the exchange"
        },
        "commission_type": {
          "type": "string",
          "enum": ["per_share", "percentage", "flat"],
          "default": "per_share",
          "description": "The way commision is calculated"
        },
        "slippage_model": {
          "type": "string",
          "enum": [
            "none",
            "time_based",
            "time_volume_based"
          ],
          "default": "none",
          "description": "The way slippage is modeled during order execution"
        },
        "slippage": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$",
          "default": "0",
          "description": "The amount of slippage per order exection"
        },
        "default_currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "default": "USD",
          "description": "The currency used by the strategy"
        },
        "timezone": {
          "type": "string",
          "default": "America/New_York",
          "description": "The timezone in which the strategy runs"
        },
        "market_hours_only": {
          "type": "boolean",
          "default": false,
          "description": "If trades can only be executed during market hours"
        },
        "allow_fractional_shares": {
          "type": "boolean",
          "default": false,
          "description": "If trades can contain fractional quantities, or only integers"
        },
        "position_sizing_method": {
          "type": "string",
          "enum": ["fixed_percentage", "fixed_dollar", "equal_weight"],
          "default": "fixed_percentage",
          "description": "For signal instructions, what strategy should the host use for sizing orders"
        },
        "position_size_value": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.10,
          "description": "For signal instructions, the base value the host should use for sizing orders"
        },
        "max_position_size": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.30,
          "description": "For signal instructions, a upper bound on how big an order the host can make"
        },
        "use_stop_loss": {
          "type": "boolean",
          "default": false,
          "description": "For signal instruction, should the host apply stop-loss risk management"
        },
        "stop_loss_pct": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.02,
          "description": "For signal instructions, how should the host apply stop-loss risk management"
        },
        "use_take_profit": {
          "type": "boolean",
          "default": false,
          "description": "For signal instructions, should the host apply take-profit risk management"
        },
        "take_profit_pct": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.10,
          "description": "For signal instructions, how should the host apply take-profit risk management"
        },
        "fill_max_pct_of_volume": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.10,
          "description": "Regulates max order fill depending on asset volume"
        },
        "risk_free_rate": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.02,
          "description": "Annual risk-free rate for Sharpe/Sortino calculations"
        }
      }
    },
    "strategy_params": {
      "type": "object",
      "description": "The strategy parameters of the plugin (arbitrary key-value pairs)"
    }
  }
}
