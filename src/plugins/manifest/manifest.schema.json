{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "QuantForge Plugin Manifest",
  "required": [
    "name",
    "version",
    "api_version",
    "kind",
    "entry",
    "host_params",
    "strategy_params"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the plugin"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "The version of the plugin"
    },
    "api_version": {
      "type": "integer",
      "const": 1,
      "description": "The API version of the plugin"
    },
    "kind": {
      "type": "string",
      "enum": ["python", "native"],
      "description": "The kind of the plugin"
    },
    "entry": {
      "type": "string",
      "description": "The entry path to file of the plugin"
    },
    "author": {
      "type": "string",
      "description": "The author of the plugin"
    },
    "description": {
      "type": "string",
      "description": "The description of the plugin"
    },
    "host_params": {
      "type": "object",
      "description": "Simulation environment parameters controlled by the host",
      "additionalProperties": false,
      "required": [
        "backtest_start_datetime",
        "backtest_end_datetime",
        "initial_capital",
        "symbols",
        "monte_carlo_runs",
        "monte_carlo_seed"
      ],
      "properties": {
        "backtest_start_datetime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime for backtest start"
        },
        "backtest_end_datetime": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime for backtest end"
        },
        "monte_carlo_runs": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Number of Monte Carlo simulation runs"
        },
        "monte_carlo_seed": {
          "type": ["integer", "null"],
          "default": null,
          "description": "Random seed for reproducibility"
        },
        "optimization_mode": {
          "type": "string",
          "enum": ["none", "grid_search", "bayesian", "genetic"],
          "default": "none"
        },
        "symbols": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["symbol", "timespan_unit", "timespan"],
            "properties": {
              "symbol": { "type": "string" },
              "timespan_unit": {
                "type": "string",
                "enum": ["second", "minute", "hour", "day", "week"]
              },
              "timespan": { "type": "integer", "minimum": 1 },
              "primary": { "type": "boolean", "default": true }
            }
          }
        },
        "initial_capital": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$"
        },
        "commission": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$",
          "default": "0"
        },
        "commission_type": {
          "type": "string",
          "enum": ["per_share", "percentage", "flat"],
          "default": "per_share"
        },
        "slippage_model": {
          "type": "string",
          "enum": ["none", "fixed", "percentage", "volume_based"],
          "default": "none"
        },
        "slippage": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$",
          "default": "0"
        },
        "tax": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?$",
          "default": "0"
        },
        "default_currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "default": "USD"
        },
        "timezone": {
          "type": "string",
          "default": "America/New_York"
        },
        "market_hours_only": {
          "type": "boolean",
          "default": false
        },
        "allow_fractional_shares": {
          "type": "boolean",
          "default": false
        },

        //
        // Configuration for signal based back testing
        //
        "position_sizing_method": {
          "type": "string",
          "enum": ["fixed_percentage", "fixed_dollar", "equal_weight"],
          "default": "fixed_percentage"
        },
        "position_size_value": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.10
        },
        "max_position_size": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.30
        },
        "max_concurrent_positions": {
          "type": "integer",
          "minimum": 1,
          "default": 10
        },
        "use_stop_loss": {
          "type": "boolean",
          "default": false
        },
        "stop_loss_pct": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.02
        },
        "use_take_profit": {
          "type": "boolean",
          "default": false
        },
        "take_profit_pct": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.10
        },
        "execution_model": {
          "type": "string",
          "enum": ["market", "realistic"],
          "default": "market"
        },
        "fill_delay_bars": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 1
        }
      }
    },
    "strategy_params": {
      "type": "object",
      "description": "The strategy parameters of the plugin (arbitrary key-value pairs)"
    }
  }
}
